{% extends "layout.njk" %}
{% block css %}
  <link rel="stylesheet" href="/assets/styles/game.css" />
{% endblock %}

{% block content %}
  <h1>{{pokemon.name}}</h1>
  <div>
    <h2>Sprites</h2>
    <div>
    {% for spriteType in ["front_default", "back_default", "front_shiny", "back_shiny"]%}
      {% if pokemon.sprites[spriteType] %}
        <img src="{{pokemon.sprites[spriteType]}}" alt="">
      {% endif %}
    {% endfor %}
    </div>    
    <h2>Possible moves</h2>
    <ul class="list-group">
      {% for move in pokemon.moves %}
        <li class="list-group-item">{{move.move.name}}</li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
